{
  "name": "git-log-as-object",
  "version": "0.2.0",
  "description": "Fetch the history for any commit range as a JavaScript object",
  "author": "smhxx <captaintrek@gmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "git",
    "log",
    "commit",
    "history",
    "json",
    "object"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smhxx/git-log-as-object.git"
  },
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "coverage": "nyc mocha --opts spec/mocha.opts",
    "deploy": "semantic-release",
    "lint": "tslint -p src",
    "lintspec": "tslint -p spec",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts spec/mocha.opts"
  },
  "dependencies": {},
  "devDependencies": {
    "@semantic-release/git": "^2.0.0",
    "@types/chai": "^4.1.1",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.46",
    "@types/node": "^9.3.0",
    "@types/sinon": "^4.1.3",
    "@types/sinon-chai": "^2.7.29",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "semantic-release": "^12.2.2",
    "sinon": "^4.1.6",
    "sinon-chai": "^2.14.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "typescript": "^2.5.3"
  },
  "license": "MIT",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "./spec/helper/setup.ts"
    ],
    "reporter": [
      "lcovonly",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "breaking": true,
          "release": "major"
        },
        {
          "type": "feat",
          "release": "minor"
        },
        {
          "type": "fix",
          "release": "patch"
        },
        {
          "type": "perf",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "docs",
          "scope": "README",
          "release": "patch"
        }
      ]
    },
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
