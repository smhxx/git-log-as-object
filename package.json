{
  "name": "git-log-as-object",
  "version": "2.0.0",
  "description": "Fetch the history for any commit range as a JavaScript object",
  "author": "smhxx <captaintrek@gmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "git",
    "log",
    "commit",
    "history",
    "json",
    "object"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smhxx/git-log-as-object.git"
  },
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "coverage": "nyc mocha --opts spec/mocha.opts",
    "deploy": "semantic-release",
    "lint": "tslint -p src",
    "lintspec": "tslint -p spec",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts spec/mocha.opts"
  },
  "dependencies": {},
  "devDependencies": {
    "@semantic-release/git": "9.0.0",
    "@types/chai": "4.2.18",
    "@types/chai-as-promised": "7.1.4",
    "@types/mocha": "7.0.2",
    "@types/node": "14.17.3",
    "@types/sinon": "10.0.2",
    "@types/sinon-chai": "3.2.5",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "mocha": "7.2.0",
    "nyc": "15.1.0",
    "semantic-release": "17.4.3",
    "sinon": "11.1.1",
    "sinon-chai": "3.7.0",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "tslint-config-airbnb": "5.11.2",
    "typescript": "4.3.2"
  },
  "license": "MIT",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "./spec/helper/setup.ts"
    ],
    "reporter": [
      "lcovonly",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "breaking": true,
          "release": "major"
        },
        {
          "type": "feat",
          "release": "minor"
        },
        {
          "type": "fix",
          "release": "patch"
        },
        {
          "type": "perf",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "docs",
          "scope": "README",
          "release": "patch"
        }
      ]
    },
    "verifyConditions": [
      "@semantic-release/git",
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
